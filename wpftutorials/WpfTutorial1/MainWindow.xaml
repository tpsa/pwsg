<Window x:Class="WpfTutorial1.MainWindow"
xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
Title="MainWindow" Height="350" Width="525">
    <StackPanel Orientation="Vertical">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="70"/>
                <ColumnDefinition/>
                <ColumnDefinition Width="70"/>
            </Grid.ColumnDefinitions>
            <TextBox Name="firstTextBox" Text="0"/>
            <ComboBox Name="operationComboBox" Grid.Column="1">
<ComboBox.Items>
                <ComboBoxItem>+</ComboBoxItem>
                <ComboBoxItem>-</ComboBoxItem>
                <ComboBoxItem>*</ComboBoxItem>
                <ComboBoxItem>/</ComboBoxItem>
                </ComboBox.Items>
            </ComboBox>
            <TextBox Name="secondTextBox" Grid.Column="2" Text="0"/>
            <Button Name="resultButton" Grid.Column="3" Click="resultButton_Click">Result</Button>
        </Grid>
        <TextBlock Name="resultBlock" HorizontalAlignment="Center"
FontSize="16" FontWeight="Bold"/>
    </StackPanel>
</Window>