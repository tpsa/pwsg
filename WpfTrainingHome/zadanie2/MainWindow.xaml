<Window x:Class="zadanie2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Slider Value="20" Height="38" HorizontalAlignment="Left" Margin="55,49,0,0" Name="slider1" VerticalAlignment="Top" Width="149" Maximum="255" SmallChange="10" TickFrequency="10" LargeChange="10" />
        <TextBlock Height="23" HorizontalAlignment="Left" Margin="96,105,0,0" Name="textBlock1" Text="{Binding ElementName=slider1, Path=Value, Mode=TwoWay}" VerticalAlignment="Top" />
        <TextBox Height="23" HorizontalAlignment="Left" Margin="171,123,0,0" Name="textBox1" Text="{Binding ElementName=slider1, Path=Value, Mode=TwoWay}" VerticalAlignment="Top" Width="120" />
    </Grid>
</Window>
